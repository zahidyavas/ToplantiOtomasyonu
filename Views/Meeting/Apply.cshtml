@{
    ViewBag.Title = "Toplantı Katılım Formu";
}

<h1 class="h4 text-center">Toplantı Katılım Formu</h1>

<form action="">
    <div class="mb-3">
        <label for="Name" class="form-label">İsim Soyisim</label>
        <input type="text" name="Name" id="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Phone" class="form-label">Telefon</label>
        <input type="text" name="Phone" id="Phone" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">E-posta</label>
        <input type="email" name="Email" id="Email" class="form-control">
    </div>
    <div class="mb-3">
        <label for="Attend" class="form-label">Katılım Durumu</label>
        <select name="Attend" id="Attend" class="form-select">
        <option value="true">Katılıyorum</option>
        <option value="false">Katılmıyorum</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>
@model List<UserInfo>
@{
    ViewBag.Title = "Toplantıya Katılım listesi";
}
<main class="text-center">
    <h1 class="h4">Toplantıya Katılım listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>İsim</td>
                <td>Katılım Durumu</td>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach(var user in Model)
            {
                var durum = user.Attend == true ? "Evet" : "Hayır";
                var className = user.Attend == true ? "table-success" : "table-danger"; 

                if(user.Attend == true)
                {
                    i++;
                }

                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td><a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="card">
        <div class="card-body">
            <span>Katılımcı sayısı: @i</span>
        </div>
    </div>
</main>